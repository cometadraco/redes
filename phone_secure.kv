                text: "Dani: *********"
                font_size: 20

            Label:
                text: "Mamá: *********"
                font_size: 20

            Label:
                text: "Papá: *********"
                font_size: 20

            Label:
                text: "Hermana: *********"
                font_size: 20

            Label:
                text: "Judas: *********"
                font_size: 20

            Label:
                text: "Cuñado: *********"
                font_size: 20
